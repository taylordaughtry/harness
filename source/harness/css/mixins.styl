/*------------------------------------*\
	# Grids
\*------------------------------------*/

inlineRow($margin = 4%)
	letter-spacing: -0.5rem
	margin-left: -($margin)%
	max-width: (100 + $margin)%

inlineColumn($cols, $total, $margin = 4%)
	display: inline-block
	letter-spacing: normal
	margin-left: $margin
	width: ($cols / $total * 100)% - $margin

centeredBlock($width)
	margin-left: auto
	margin-right: auto
	max-width: $width